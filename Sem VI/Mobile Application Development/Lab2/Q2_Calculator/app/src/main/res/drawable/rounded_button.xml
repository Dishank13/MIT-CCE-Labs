<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9C27B0"/> <!-- Purple background -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#7B1FA2"/> <!-- Darker purple when pressed -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#BA68C8"/> <!-- Lighter purple when focused -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</selector>
